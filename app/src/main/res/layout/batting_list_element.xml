<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_player_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Batting"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_runs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="R"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_balls_played"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="B"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_fours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="4s"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_sixes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="6s"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_strike_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="S/R"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_dismissal_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="dissmissal-info" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>